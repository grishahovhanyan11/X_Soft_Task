html 
  head  
    title Log In      
    link(rel="stylesheet" href="/common.css")
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
    //- icons
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet")
  body 
    h1.header.login-header Log in

    if invalidValues
      div.validation= validationMessage   

    if success
      div.success= successInfoMessage  
      
    .center
      form(action="/auth/login", method="post") 
        input(name="email" placeholder="Email" type="email" value= email)#email-input.input-field
        br
        input(name="password" placeholder="Password" type="password").input-field 
        br
        button(type="submit" )#submit-btn.button.login-button.login-page-login-button Log in

        a(href="/auth/forgotPassword").forgot-link Forgot password ? 

      //- Google login button
      a(href="/auth/google" title="Google+" style="background-color: #dd4b39; border-color: #dd4b39").btn.btn-primary
        span Login with Google
        i.fa.fa-google-plus

      br
      br
      div New user ? 
      br
      a(href="/auth/register").button.register-button Register
  

    //- Put mail in local storage 
    script(src="/js/inSubmitPutMailInLocalStorage.js")
