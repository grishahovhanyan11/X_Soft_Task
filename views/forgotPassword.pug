html 
  head  
    title Forgot Password       
    link(rel="stylesheet" href="/common.css")
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
  body 
    h1.header.restore-header Forgot Password 
    
    div(style="height: 110px")
      if invalidValues 
        div.validation= validationMessage  

      if successInfo 
        div.success= successMessage

    div.center.forgot_password_block
      b Enter your email to send confirm code
      br 

      form(action="/auth/restorePassword" method="GET")
        input(name="email" placeholder="Your email" type="email")#email-input.input-field
        br
        button(type="submit")#send_code_btn.button.confirm-button Send

        script(src="/js/sendCodeToMail.js")   

