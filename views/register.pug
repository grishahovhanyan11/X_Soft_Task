html 
  head  
    title Register      
    link(rel="stylesheet" href="/common.css")
    //- bootstrap
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    //- script(src="/js/disabledButton.js") 
  body 
    h1.header.register-header Register 

    if invalidValues 
      div.validation= validationMessage   

    if success 
      div.success= successInfoMessage   

    if alreadyRegistered 
      div.info
        div This email is already registered.
        div If you don't remember your password you can restore it.
        b Send confirm code to your email to restore password?
        div 
          a(href="/auth/restorePassword")#send_code_btn.yes_or_no.btn.btn-success Yes 
          a#no_btn.yes_or_no.btn.btn-danger No

        script(src="/js/closeInfoField.js")
        script(src="/js/sendCodeToMail.js") 

    .center
      form(action="/auth/register", method="post")
        input(name="email" placeholder="Email Address" type="email" value= email)#email-input.input-field
        br
        input(name="password" placeholder="Password" type="password" value= password).input-field 
        br
        button(type="submit")#submit-btn.button.register-button Register
  
    .center
      div Already registered ?
      br
      a(href="/auth/login").button.login-button Log in  
      //- 


    //- Put mail in local storage 
    script(src="/js/inSubmitPutMailInLocalStorage.js")
          