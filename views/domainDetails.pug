html 
  head  
    title Domain Details   
    link(rel="stylesheet" href="/domain.css")
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
  body 
    div.app-wrapper
      div.header 
        h1.header-left Domain Details   
        div.header-right 
          div User Email: #{userEmail}

          form(action="/profile/logout")
            button(type="submit") Log out 

      div.data-block 
        form(action="/profile").to-profile-form
          button(type="submit") Profile

        div.domain-info
          if validationInfo
            b(style="color: red")= validationInfo 
          else  
            b Domain URL

          br


          form(action=`/domain/${domain.id}?_method=PUT` method="post")
            input(name="domain" value= domain.name type="url" style="margin-bottom: 20px")
            br
            button(type="submit") Change
          
          form(action=`/domain/${domain.id}?_method=DELETE` method="post")
            button(type="submit") Delete

          hr

        div
          h2.test-info-header Domain Tests

          if domainTests && domainTests.length > 0 
            each test in domainTests
              div.test-data
                h4 Request Author Email: #{test.userEmail}
                div Request Status: #{test.status}
                div Request Status Text: #{test.statusText}
                div Request Date: #{test.requestDate}

          else 
            div No tests!
            






