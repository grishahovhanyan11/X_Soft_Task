html 
  head  
    title Verification      
    link(rel="stylesheet" href="/common.css")
    //- bootstrap
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  body 
    h1.header.verify-header Verify your account 
    
    div.login-form-verify
      form(action="/auth/login") 
        button(type="submit").button.login-button Log In  
    
    div(style="height: 110px")
      if invalidValues 
        div.validation= validationMessage  

      if successInfo 
        div.success= successMessage

    div.center.verify_block
      b A six-digit number has been send to your email.
      br 
      b Enter it and pass email verification.
      br

      form(action="/auth/verify", method="post")
        input(name="confirmCode" placeholder="Confirm code" type="number" maxlength="6")#code-input.code-input
        br
        input(name="email" style="display:none")#email-input
        button(type="submit" disabled)#submit-btn.button.disabled-button Submit

      //- get email from localStorage and put in form
      script.
        const emailInput = document.getElementById('email-input')
        const emailFromStorage = window.localStorage.getItem('email')
        emailInput.value = emailFromStorage

      script(src= "/js/disabledButton.js")
    