html 
  head  
    title Profile   
    link(rel="stylesheet" href="/profile.css")
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
  body 
    div.app-wrapper
      div.header 
        h1.header-left Admin Profile
        div.header-right 
          div User Email: #{userEmail}

          form(action="/profile/logout")
            button(type="submit") Log out 


      div.data-block
        form(action="/domain")
          button(type="submit") Add New Domain 

        if domains 
          each domain in domains 
            div.domain-data
              div= domain.name
              div= domain._id

        else 
          h2 No domains in DB!


