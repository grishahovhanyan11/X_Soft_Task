html 
  head  
    title Profile   
    link(rel="stylesheet" href="/profile.css")
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
  body 
    div.app-wrapper
      div.header 
        h1.header-left Cron Profile
        div.header-right 
          form(action="/profile/logout")
            button(type="submit") Log out 


      div.cron-content 
        b Enter count of domains in which you needed to do requests

        if domainsCount !== 0
          div From 0 to #{domainsCount}

        

        form(action="/cron" method="post")
          input(name="count" placeholder="Domains count" type="number").center
          br
          button(type="submit").send-btn  Send 


        if requestsData
          each data in requestsData
            div.request-data
              div Request url -> #{data.url}
              div Request status -> #{data.status}
              div Request status text -> #{data.statusText}
              div Request Date -> #{data.requestDate}
        

