html 
  head  
    title New Domain  
    link(rel="stylesheet" href="/domain.css")
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
  body 
    div.app-wrapper
      div.header 
        h1.header-left New Domain
        div.header-right 
          div User Email: #{userEmail}

          form(action="/profile/logout")
            button(type="submit") Log out 


      div.data-block 
        form(action="/profile").to-profile-form
          button(type="submit") Profile


        form(action="/domain" method="post")
          if validationInfo
            b(style="color: red")= validationInfo 
          else  
            b New Domain URL
          
          br
          input(name="domain" placeholder="https://www.xsoft.am/" type="url").center
          br
          button(type="submit").new-domain-btn Add New Domain 


